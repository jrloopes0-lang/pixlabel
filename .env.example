# Database
DATABASE_URL=postgresql://user:password@host:port/pixlabel

# Session
SESSION_SECRET=your-random-secret-here-min-32-chars

# OAuth - Replit (Production)
# Registrar em: https://developer.replit.com/
# OAuth Provider (generic)
# Example (GitHub/Keycloak/Other): set these to your provider's URLs/credentials
OAUTH_PROVIDER_NAME=your-provider-name
OAUTH_AUTH_URL=https://provider.example.com/oauth/authorize
OAUTH_TOKEN_URL=https://provider.example.com/oauth/token
OAUTH_USERINFO_URL=https://provider.example.com/oauth/userinfo
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Environment
NODE_ENV=development
# development | production | test

# Server
PORT=3000
HOST=0.0.0.0

# Frontend API URL (Production)
VITE_API_BASE_URL=https://your-railway-app.railway.app/api

# Optional: Logging
LOG_LEVEL=debug
# debug | info | warn | error
